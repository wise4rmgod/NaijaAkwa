<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShowDesignersGalleryCommentsandLikesActivity">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/showdesignersgallerycommentrecyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="110dp"
            android:layout_marginTop="10dp"
            />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

        <EditText
            android:id="@+id/showdesignersgallerycommentedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  type your comments here"
            android:inputType="textMultiLine"/>

        <Button
            android:id="@+id/showdesignersgallerycommentpostcommentbtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/rippleeffect"
            android:padding="10dp"
            android:text="Comments" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>